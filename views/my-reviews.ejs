<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Reviews</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Add any custom styles here */
        body {
            padding: 20px;
            background-image: url("/images (5).jpeg");
            background-size: cover;
            background-repeat: no-repeat;
        }
        .review-item {
            margin-bottom: 10px;
        }
        .comment-text {
            font-weight: bold;
        }
        .delete-btn {
            margin-left: 500px; /* Adjust the margin as needed */
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Display the customer's reviews -->
        <% if (reviews.length > 0) { %>
            <h1>My Reviews for <%= reviews[0].restaurant_name %></h1>
            <ul class="list-group">
                <% reviews.forEach(review => { %>
                    <li class="list-group-item review-item">
                        <span class="comment-text"><%= review.comment %></span>
                        <!-- Optionally, provide a button to delete the review -->
                        <form action="/customer/deleteReview/<%= review.id %>" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-sm delete-btn">Delete Review</button>
                        </form>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No reviews found for this restaurant.</p>
        <% } %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
