<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Restaurants</title>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <style>
    body {
      background-image: url("/ffa860afd4a78ec8500e0a4d71ef4375.jpg");
      background-size: cover;
      background-position: center;
      margin: 0;
      padding: 0;
    }

    .view-cart-btn {
      font-size: 18px;
      padding: 10px 20px;
    }

    .existing-orders-btn {
      font-size: 18px;
      padding: 10px 10px;
      background-color: green;
      color: white;
    }

    /* Adjust width of search bars */
    .form-control {
      width: 400px;
    }

    /* Style for the open/closed indicator */
    .status-indicator {
      position: absolute;
      top: 10px;
      /* Adjust the top position as needed */
      right: 10px;
      /* Adjust the right position as needed */
      background-color: rgba(255, 255, 255, 0.8);
      padding: 5px 10px;
      border-radius: 5px;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/restaurant/customer-profile">
        <i class="fas fa-home"></i> <!-- Home icon -->
        <em>
          <%=customerName.rows[0].name %>
        </em>
      </a>
    </div>
  </nav>
  <div class="container">
    <h2>Your Discounts!</h2>
    <ul>
      <% discounts.forEach(discount=> { %>
        <li>
          <%= discount.percentage %>% off, to get it, use this code <%= discount.code %>
        </li>
        <% }); %>
    </ul>

    <h1>Search Restaurant</h1>
    <form action="/restaurant/search-restaurants" method="get" class="mb-4">
      <div class="form-row">
        <div class="col-auto">
          <input type="text" class="form-control" id="search" name="search">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </div>
    </form>

    <h1>Search Food By Name</h1>
    <form action="/restaurant/search-food" method="get" class="mb-4">
      <div class="form-row">
        <div class="col-auto">
          <input type="text" class="form-control" id="foodName" name="foodName" required>
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </div>
    </form>
    <a href="/restaurant/advanced-search" class="btn btn-success view-cart-btn">Advanced Search</a>
    <a href="/order/cart" class="btn btn-success view-cart-btn">View Cart</a>
    <a href="/restaurant/orders-existing-customer/<%= customerId%>" class="btn btn-success existing-orders-btn">Existing
      orders</a>
    <h1>All Restaurants</h1>

    <div class="row">
      <% restaurants.forEach(restaurant=> {
        const openingTime = restaurant.opening_time;
        const closingTime = restaurant.closing_time;
        const currentTime = restaurant.current_time;

        const openingTimeParts = openingTime.split(':');
        const closingTimeParts = closingTime.split(':');
        const currentTimeParts = currentTime.split(':');

        const openingTimeHHMM = `${openingTimeParts[0]}:${openingTimeParts[1]}`;
        const closingTimeHHMM = `${closingTimeParts[0]}:${closingTimeParts[1]}`;
        const currentTimeHHMM = `${currentTimeParts[0]}:${currentTimeParts[1]}`;

        const isOpen = currentTimeHHMM >= openingTimeHHMM && currentTimeHHMM <= closingTimeHHMM; %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <!-- Restaurant image with open/closed indicator -->
              <div class="position-relative">
                <!-- Open/Closed indicator -->
                <div class="status-indicator">
                  <% if (isOpen) { %>
                    <span class="open-indicator">Open</span>
                    <% } else { %>
                      <span class="closed-indicator">Closed</span>
                      <% } %>
                </div>
                <!-- Restaurant image -->
                <img src="<%= restaurant.picture_url %>" class="card-img-top" alt="<%= restaurant.name %>">
              </div>
              <!-- Restaurant details -->
              <div class="card-body">
                <h5 class="card-title">
                  <%= restaurant.name %>
                </h5>
                <p class="card-text">Hello from <%= restaurant.name %>
                </p>
                <a href="/restaurant/restaurant-customer/<%= restaurant.id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
          <% }); %>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>