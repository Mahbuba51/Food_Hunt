    <div class="row">
      <% restaurants.forEach(restaurant => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <!-- <img src="https://picsum.photos/400/300?category=food&random=<%= Math.random() %>" class="card-img-top" alt="<%= restaurant.name %>"> -->
            <img src="https://source.unsplash.com/400x300/?food" class="card-img-top" alt="<%= restaurant.name %>">

            <div class="card-body">
              <h5 class="card-title"><%= restaurant.name %></h5>
              <p class="card-text">Hello from <%= restaurant.name %></p>
              <a href="/restaurant/restaurant/<%= restaurant.id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Add Bootstrap JS and Popper.js -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
