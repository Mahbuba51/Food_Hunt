<!-- views/update-restaurant.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Restaurant</title>
</head>

<body>
    <div class="container">
        <h1>Update Restaurant</h1>
        <form action="/admin/update-restaurant/<%= restaurant.id %>" method="POST">

            <label for="columnName">Column Name:</label>
            <select id="columnName" name="columnName" required>
                <option value="name">Name</option>
                <option value="contact_no">Contact Number</option>
                <option value="email">Email</option>
                <option value="location">Location</option>
                <option value="opening_time">Opening Time</option>
                <option value="closing_time">Closing Time</option>
            </select><br>

            <label for="columnValue">New Value:</label>
            <input type="text" id="columnValue" name="columnValue" required><br>

            <button type="submit">Update Restaurant</button>
        </form>
    </div>
</body>

</html>
