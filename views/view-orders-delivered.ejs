<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Orders</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Add your custom stylesheets here -->
    <style>
        /* Add your custom styles here */
        .order-details {
            border: 1px solid #ccc;
            margin-bottom: 20px;
            padding: 20px;
            border-radius: 5px;
        }
        body
        {
            background-image: url("/pexels-photo-1831234.webp");
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="mt-4">Restaurant: <%= restaurant.restaurant_name %></h1>

        <h2>Orders</h2>
        <% orders.forEach(order => { %>
            <div class="order-details">
                <p><strong>Order ID:</strong> <%= order.id %></p>
                <p><strong>Total Amount:</strong> <%= order.total_amount %></p>
                <p><strong>Status:</strong> <%= order.status %></p>
                <p><strong>Delivery Location:</strong> <%= order.delivery_location %></p>
                <p><strong>Order Time:</strong> <%= order.order_time %></p>
                <!-- Loop through food items in the order -->
                <ul>
                    <% order.foodItems.forEach(foodItem => { %>
                        <li>
                            <p><strong>Food Name:</strong> <%= foodItem.name %></p>
                            <p><strong>Number of Servings:</strong> <%= foodItem.no_of_servings %></p>
                        </li>
                    <% }); %>
                </ul>
            </div>
        <% }); %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Add your custom scripts here -->
</body>

</html>
