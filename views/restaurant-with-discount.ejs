<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Restaurants with Discounts</title>
  <!-- Add Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      padding: 20px;
      background-image: url('download.jpeg'); /* Replace 'your-background-image-url.jpg' with the actual image URL */
      background-size: cover;
      background-position: center;
      color:black; /* Set text color to white for better visibility on a background image */
    }

    .container {
      max-width: 600px; /* Adjust the maximum width as needed */
      background-color: rgba(255, 255, 255, 0.8); /* Adjust the alpha value for background transparency */
      padding: 20px;
      border-radius: 10px;
    }

    .list-group-item {
      background-color: transparent; /* Make list items transparent to blend with the background */
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Restaurants with Discounts</h1>

    <ul class="list-group">
      <% restaurantsWithDiscounts.forEach(restaurant => { %>
        <li class="list-group-item">
          <a href="/restaurant-with-discount/<%= restaurant.id %>"><%= restaurant.name %></a>
        </li>
      <% }); %>
    </ul>
  </div>

  <!-- Add Bootstrap JS and Popper.js -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
