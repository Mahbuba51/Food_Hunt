<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delivery Charge</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body{
            background-image: url("/images (9).jpeg");
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div>
            <h1 class="mb-5">Delivery Charge</h1>
            <form action="/admin/delivery-charge" method="POST">
                <div class="mb-3">
                    <label for="newCharge" class="form-label">New Delivery Charge:</label>
                    <input type="number" id="newCharge" name="newCharge" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
            <h2 class="mt-4">Current Delivery Charge: <%= deliveryCharge.charge %></h2>
            <% if (typeof success !=='undefined' && success==='delivery-charge-updated' ) { %>
                <p style="color: green;" class="mt-2">Delivery charge updated successfully!</p>
            <% } %>
        </div>
    </div>
</body>
</html>
