<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Orders</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Your custom styles -->
    <style>
        /* Add your custom styles here */
        body{
            background-image: url("/download_sky.jpeg");
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2 class="mt-4 mb-3">Orders</h2>
        <% orders.forEach(order => { %>
        <div class="card mb-4">
            <div class="card-header">
                Order ID: <%= order.id %>
            </div>
            <div class="card-body">
                <h5 class="card-title">Order Details</h5>
                <p class="card-text">Total Amount: <%= order.total_amount %></p>
                <p class="card-text">Status: <%= order.status %></p>
                <p class="card-text">Delivery Location: <%= order.delivery_location %></p>
                <p class="card-text">Order Time: <%= order.order_time %></p>
                <h5 class="card-title mt-3">Food Items</h5>
                <ul class="list-group">
                    <% order.foodItems.forEach(foodItem => { %>
                    <li class="list-group-item">
                        <p class="mb-1">Food Name: <%= foodItem.name %></p>
                        <p class="mb-1">Number of Servings: <%= foodItem.no_of_servings %></p>
                    </li>
                    <% }); %>
                </ul>
            </div>
        </div>
        <% }); %>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
